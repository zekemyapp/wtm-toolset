{
    "manifest_version": 3,
    "name": "WTM Toolset",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "hello.html",
        "default_icon": "images/tv-app.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://whatthemovie.com/shot/random"
            ]
        },
        {
            "js": ["scripts/shot.js"],
            "matches": [
                "https://whatthemovie.com/shot/*"
            ]
        },
        {
            "js": ["scripts/feature.js"],
            "matches": [
                "https://whatthemovie.com/overview/*"
            ]
        }
      ]
}
